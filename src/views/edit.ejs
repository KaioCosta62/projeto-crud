<!DOCTYPE html>
<html lang="pt-br">
<%- include('partials/head.ejs') %>
<body>
  <h1><%= title %></h1>
  <%- include('partials/navbar.ejs') %>

  <% if(typeof message !== 'undefined'){ %>
    <span><%= message %></span>
  <% } %>
  
  <form action="/edit/<%= user._id %>" method="post">
    <div>
      <label>Nome</label>
      <input type="text" name="name" id="" placeholder="Digite seu nome" value="<%= user.name %>">
    </div>
    <div>
      <label>Idade</label>
      <input type="text" name="age" id="" placeholder="Digite sua idade" value="<%= user.age %>">
    </div>
    <div>
      <label>E-mail</label>
      <input type="email" name="email" id="" placeholder="Digite seu e-mail" value="<%= user.email %>">
    </div>
    <button type="submit">Editar</button>
  </form>
</body>
</html>