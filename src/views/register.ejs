<!DOCTYPE html>
<html lang="pt-br">
<%- include('partials/head.ejs') %>
<body>
  <h1><%= title %></h1>
  <%- include('partials/navbar.ejs') %>

  <% if(typeof message !== 'undefined'){ %>
    <span><%= message %></span>
  <% } %>
  
  <form action="/register/add" method="post">
    <div>
      <label>Nome</label>
      <input type="text" name="name" id="" placeholder="Digite seu nome">
    </div>
    <div>
      <label>Idade</label>
      <input type="text" name="age" id="" placeholder="Digite seu nome">
    </div>
    <div>
      <label>E-mail</label>
      <input type="email" name="email" id="" placeholder="Digite seu nome">
    </div>
    <div>
      <label>Senha</label>
      <input type="password" name="password" id="" placeholder="Digite seu nome">
    </div>
    <button type="submit">Cadastrar</button>
  </form>
</body>
</html>